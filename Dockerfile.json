# Dockerfile
FROM node:20-slim

# 安裝 Puppeteer 需要的系統套件
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        fonts-noto-color-emoji \
        && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY package*.json ./
RUN npm ci --omit=dev

COPY . .

ENV PORT=3000 \
    PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true

# Railway 會自動注入 process.env.PORT
EXPOSE 3000
CMD ["npm", "start"]